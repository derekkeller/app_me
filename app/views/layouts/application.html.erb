<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="holder">

	<% if flash.any? %>
	  <% flash.each do |key, value| %>
	    <div class="flash <%= key %>"><%= value %></div>
	  <% end %>
	<% end %>

		<%= render 'layouts/header' %>

		<%= yield %>

</div>

		<%= render 'layouts/footer' %>

</body>
</html>